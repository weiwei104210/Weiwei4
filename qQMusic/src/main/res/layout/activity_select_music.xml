<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_sel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/bbb" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/ccccccc"/>
            <ImageView
                android:id="@+id/im_selet_stop"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="40dp"
                android:layout_weight="1"
                android:background="@drawable/player_stop1"></ImageView>



            <ImageView
                android:id="@+id/im_selet_pause"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:drawable/ic_media_pause"></ImageView>
            <ImageView
                android:id="@+id/im_selet_play"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:drawable/ic_media_play"></ImageView>
            <ImageView
                android:id="@+id/im_selet_next"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginRight="40dp"
                android:background="@android:drawable/ic_media_next"></ImageView>
        </LinearLayout>


        <ListView
            android:id="@+id/lv_se"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ll_title"
            android:layout_above="@+id/ll_bottom"></ListView>
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:background="#55000000"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/cd1"
                />

            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                android:layout_weight="1" />

        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
